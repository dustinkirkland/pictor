if [ "$(id -un)" != "www-data" ]; then
	exec sudo -u www-data "$0" "$@"
else
	cd /usr/share/pictor
	find /var/cache/pictor -type l -delete
	php5 /usr/share/pictor/index.php batch
	find /var/cache/pictor/ -empty -type f -delete
fi
